{# src/Louvre/BilletterieBundle/Ressources/views/Billet/achat.html.twig #}

{% extends "::layout.html.twig" %}


{% block body %}
    <div class="container col-md-offset-2 col-md-8" id="corpsAchat">
        <ul class="nav nav-tabs" id="tab">
            <li class="nav col-md-3 active"><a href="#jour" data-toggle="tab">Jour de la visite</a></li>
            <li class="nav col-md-3"><a href="#billet" data-toggle="tab">Vos billets</a></li>
            <li class="nav col-md-3"><a href="#coordonnees" data-toggle="tab">Vos coordonnées</a></li>
            <li class="nav col-md-3"><a href="#paiement" data-toggle="tab">Paiement</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="jour">
                <br/>
                <label for="date">Date de la visite :</label>
                <input type="text" id="datepicker" class="datepicker">
                <br/>
                <button type="button" class="btn btn-default" id="btnSuivantBillet" href="#">Suivant</button>
            </div>
            <div class="tab-pane" id="billet">
                <br/>
                <h4>BILLET</h4>
                <button type="button" class="btn btn-default" id="btnPrecedentJour" href="#">Précedent</button>
                <button type="button" class="btn btn-default" id="btnSuivantCoordonnees" href="#">Suivant</button>
            </div>
            <div class="tab-pane" id="coordonnees">
                <br/>
                <h4 id="titreCoordonnees">Vos coordonnées :</h4>
                <form role="form" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-panel col-sm-2" for="nom">Nom : </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="nom" placeholder="Entrez votre nom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-panel col-sm-2" for="prenom">Prénom : </label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="prenom" placeholder="Entrez votre prénom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-panel col-sm-2" for="email">E-mail : </label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="email" placeholder="Entrez votre E-mail">
                        </div>
                    </div>
                </form>
                <button type="button" class="btn btn-default" id="btnPrecedentBillet" href="#">Précedent</button>
                <button type="button" class="btn btn-default" id="btnSuivantPaiement" href="#">Suivant</button>
            </div>
            <div class="tab-pane" id="paiement">
                <br/>
                <h3>PAYER</h3>
                <button type="button" class="btn btn-default" id="btnPrecedentCoordonnees" href="#">Précedent</button>
                <button type="button" class="btn btn-default" id="btnPayer" href="#">Suivant</button>
            </div>
        </div>
    </div>
    <script>
        $(function() {
            $('.datepicker').datepicker();

            $('#btnSuivantBillet').click(function () {
                $('#tab a[href="#billet"]').tab('show');
            })

            $('#btnSuivantCoordonnees').click(function () {
                $('#tab a[href="#coordonnees"]').tab('show');
            })

            $('#btnSuivantPaiement').click(function () {
                $('#tab a[href="#paiement"]').tab('show');
            })

            $('#btnPrecedentJour').click(function () {
                $('#tab a[href="#jour"]').tab('show');
            })

            $('#btnPrecedentBillet').click(function () {
                $('#tab a[href="#billet"]').tab('show');
            })

            $('#btnPrecedentCoordonnees').click(function () {
                $('#tab a[href="#coordonnees"]').tab('show');
            })
        });
    </script>
{% endblock %}